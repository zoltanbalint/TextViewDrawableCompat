<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">

    <com.zoltanbalint.textviewcompat.TextViewDC
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableBottom="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:drawableLeft="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:drawableRight="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:drawableTop="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:text="Hello World!"
        app:drawableTint="@color/colorPrimary"
        app:drawableTintBottom="@color/material_blue_grey_800"
        app:drawableTintLeft="@color/colorAccent"
        app:drawableTintRight="@color/highlighted_text_material_dark"
        app:drawableTintTop="@color/accent_material_light"
        />

    <com.zoltanbalint.textviewcompat.TextViewDC
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableLeft="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:drawableTop="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:text="Hello World!"
        app:drawableTint="@color/colorAccent"
        />

    <com.zoltanbalint.textviewcompat.CheckedTextViewDC
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:checkMark="@drawable/abc_btn_check_material"
        android:checked="true"
        android:drawableLeft="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:drawableTop="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:text="Hello World!"
        app:drawableTint="@color/colorAccent"
        />

    <com.zoltanbalint.textviewcompat.EditTextDC
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableBottom="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:drawableLeft="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:drawableTop="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:text="Hello World!"
        app:drawableTint="@color/colorAccent"
        app:drawableTintBottom="@color/accent_material_light"
        />

    <com.zoltanbalint.textviewcompat.EditTextDC
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:drawableTop="@drawable/abc_ic_menu_cut_mtrl_alpha"
        android:text="Hello World!"
        app:drawableTint="@color/colorAccent"/>

</LinearLayout>
